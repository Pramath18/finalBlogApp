<body>
        <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
            <div class="container px-4 px-lg-5">

  <div>
  <form class="d-flex"  method="GET" action="/search">
    <input class="form-control me-2" type="search" name="query" placeholder="Search..."/>
    <button class="btn btn-outline_success" type="submit">Search</button>
  </form>
</div>

                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto py-4 py-lg-0">
                        <li class="nav-item">
                         <%= link_to 'Home', posts_path, class:"nav-link px-lg-3 py-3 py-lg-4" %></li>
                        <li class="nav-item">
              <%= link_to 'about',rails_path, class:"nav-link px-lg-3 py-3 py-lg-4" %>
            </li>
            
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, class:"nav-link px-lg-3 py-3 py-lg-4",
                   method: :delete %> 
            </li>
                    </ul>
                </div>
            </div>
        </nav>
<hr class="my-4">

<h1><center>Create Post</center></h1>






<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

    <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  

<td>
<%=form.label :category %>
<%= form.select :category_id, Category.all.map {|c| [c.category, c.id]} %>
</td>
<div>
<%= form.check_box :private %>
<%= form.label :private %>
</div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

</body>
</html>