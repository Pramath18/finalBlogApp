<%= javascript_pack_tag 'index' %>

<head>
<style>
body{
  background-color:#66ffcc;
}
.post{
  font-size:50px;
}
a{
  text-decoration:none;
  
}
</style>
</head>
<body>
<p id="notice"><%= notice %></p>
<h1 class="post"><center>Posts</center></h1>

<table border="2">
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
       <td><center><%= post.title.titleize %></center></td>
       <td><center><%= post.body %></center></td>
        <td><center><%= post.user_id %></center></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% @categories.each  do |category| %>
<%= link_to category.category, posts_path(:cate => category.id) %>
<% end %>

<br>
<br>

<%= link_to 'New Post', new_post_path %>
<a href="google.com">Google</a>
<br>
<br>
<div>
  <form class="d-flex"  method="GET" action="/search">
    <input class="form-control me-2" type="search" name="query" placeholder="search posts">
    <button class="btn btn-outline_success" type="submit">Search</button>
  </form>
</div>
</body>