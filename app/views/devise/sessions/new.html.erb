<html>
<head>
<link rel="stylesheet" href="http://code.ionicframework.com/ionicons/1.5.2/css/ionicons.min.css"/>
<style>
html {
  height: 100%;
}
body {
  margin: 0;
  padding: 0;
  font-family: sans-serif;
  background: linear-gradient(#141e30, #243b55);
}

.login-box {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400px;
  padding: 40px;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
  box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
  border-radius: 10px;
}

.login-box h1 {
  margin: 0 0 30px;
  padding: 0;
  color: #fff;
  text-align: center;
}

.field{
  position:relative;
}


.textbox{
   width: 100%;
  padding: 10px 0;
  font-size: 16px;
  color: #fff;
  margin-bottom: 30px;
  border: none;
  border-bottom: 1px solid #fff;
  outline: none;
  background: transparent;
}

 .icon-big{
  font-size:200%;  
  width: 70%;
  color: #e67e22;  
  float: left;
}

.label{
  font-size:14px;
  color: #fff;
}

.btn{
  position: relative;
  display: inline-block;
  padding: 10px 20px;
  color: #e67e22;
  font-size: 16px;
  text-decoration: none;
  text-transform: uppercase;
  overflow: hidden;
  transition: 0.5s;
  margin-top: 40px;
  letter-spacing: 4px;
  border-radius: 15px;

}

.btn:hover{
  background: #e67e22;
  color: #fff;
  border-radius: 15px; 
}

.devise-links a{
  text-decoration: none;
  font-size: 18px;
  color: #fff;
  line-height: 1.5;
}

.devise-links a:hover{
  background: #e67e22;
  color: #fff;
}

</style>
<body>
<div class="login-box">
<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
<i class="ion-ios7-email-outline icon-big"></i>
<%= f.email_field :email, autofocus: true, class:"textbox", placeholder:"Email", autocomplete: "email" %> 
  </div>

  <div class="field">
  <%# <label>Password</label> %>
      <i class="ion-ios7-locked-outline icon-big"></i>
    <%= f.password_field :password, class:"textbox", placeholder:"Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class:"btn" %>
  </div>
<% end %>

<div class="devise-links">
<%= render "devise/shared/links"%>
</div>
</div>
</body>
</html>